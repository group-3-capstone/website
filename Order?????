        <script>
          function confirmation() {
            alert("Thank you for your order!");
            window.location.href="ordercomplete.html";
          }
           
          function phoneNumValidation() {
                var phoneNumInput = document.getElementById("phone");
                
                //Checks that the input matches the pattern
                phoneNumInput.addEventListener("input", () => {
                    phoneNumInput.setCustomValidity("");
                    phoneNumInput.checkValidity();
                })
                
                //Sets the error message when invalid phone number is inputed
                phoneNumInput.addEventListener("invalid", () => {
                    phoneNumInput.setCustomValidity("Please enter phone number with the format: 1234567890");
                })
            //Phone number validation code: https://www.abstractapi.com/guides/validate-phone-number-javascript
            } 
    </script>
